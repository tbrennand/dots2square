    "emulator:test": "node scripts/test-emulator-match.js",
    "emulator:full": "npm run emulator:start & sleep 5 && npm run emulator:test",
    "hosting:build": "npm run build",
    "hosting:serve": "firebase hosting:channel:deploy preview",
    "hosting:deploy": "npm run build && firebase deploy --only hosting",
